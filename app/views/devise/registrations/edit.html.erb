
<div class=container>
<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, :html => { :class => 'form-horizontal form-model' }) do |f| %>

  <% if @user.errors.any? %>
      <div id="error_explanation" class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <h4><%= pluralize(@user.errors.count, "error") %> prohibited this listing from being saved:</h4>

        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

  <div class="field">
    <%= f.label 'first name', :class => 'control-label col-md-2' %><br />
    <%= f.text_field :name, autofocus: true, :class => 'text-field form-control' %>
  </div>

  <div class="field">
    <%= f.label 'last name', :class => 'control-label col-md-2' %><br />
    <%= f.text_field :last_name, autofocus: true, :class => 'text-field form-control' %>
  </div>

  <div class="field">
    <%= f.label :email, :class => 'control-label col-md-2' %><br />
    <%= f.email_field :email, :class => 'text-field form-control' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, :class => 'control-label col-md-2' %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off", :class => 'text-field form-control' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, :class => 'control-label col-md-2' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'text-field form-control' %>
  </div>

  <div class="field">
    <%= f.label :current_password, :class => 'control-label col-md-2' %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", :class => 'text-field form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "Update", :class => 'btn btn-primary' %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>

</div>
